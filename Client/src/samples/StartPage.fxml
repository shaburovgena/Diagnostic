<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.*?>
<AnchorPane fx:id="panel" prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: #046852;"
            xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controller.StartPage">
    <children>
        <AnchorPane fx:id="loginPanel" layoutX="-3.0" layoutY="103.0" prefHeight="297.0" prefWidth="607.0"
                    style="-fx-background-color: #dddddd;">
            <children>
                <Label fx:id="labelAuth" alignment="CENTER" layoutX="6.0" prefHeight="75.0" prefWidth="596.0"
                       text="Authorization" textAlignment="CENTER" textFill="#ffa641">
                    <font>
                        <Font name="Imprint MT Shadow" size="30.0"/>
                    </font>
                </Label>
                <TextField fx:id="textLoginField" alignment="CENTER" layoutX="179.0" layoutY="75.0" prefHeight="37.0"
                           prefWidth="251.0" promptText="Login">
                    <font>
                        <Font size="20.0"/>
                    </font>
                </TextField>
                <PasswordField fx:id="textPasswField" alignment="CENTER" layoutX="177.0" layoutY="140.0"
                               prefHeight="37.0" prefWidth="251.0" promptText="Password">
                    <font>
                        <Font size="20.0"/>
                    </font>
                </PasswordField>
                <Button fx:id="btnSignIn" layoutX="214.0" layoutY="207.0" mnemonicParsing="false" prefHeight="38.0"
                        prefWidth="180.0" style="-fx-background-color: #046852;" text="Sign In" textFill="WHITE">
                    <font>
                        <Font name="Imprint MT Shadow" size="20.0"/>
                    </font>
                </Button>
            </children>
        </AnchorPane>
        <Label fx:id="label" alignment="CENTER" layoutX="190.0" layoutY="14.0" prefHeight="75.0" prefWidth="224.0"
               text="DiagTool" textAlignment="CENTER" textFill="WHITE">
            <font>
                <Font name="Imprint MT Shadow" size="46.0"/>
            </font>
        </Label>
        <Button fx:id="btnSignUp" layoutX="408.0" layoutY="33.0" mnemonicParsing="false" prefHeight="38.0"
                prefWidth="180.0" style="-fx-background-color: #ffa641;" text="Sign Up" textFill="WHITE">
            <font>
                <Font name="Imprint MT Shadow" size="20.0"/>
            </font>
        </Button>
    </children>
</AnchorPane>
